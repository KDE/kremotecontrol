<?xml version="1.0" ?>
<!DOCTYPE remote SYSTEM "remote.dtd">

<remote id="AppleRemote">
	<name>Apple Remote</name>
	<author>Michael Zanetti</author>
	<information>Bundled with all Intel powered Apple Computers and some late MacMini PPC models</information>
	<button id="Menu" class="enter"><name>Menu</name></button>
	<button id="Play" class="play"><name>Play</name></button>
	<button id="Vol+" class="volumeup"><name>Volume Up</name></button>
	<button id="Vol-" class="volumedown"><name>Volume Down</name></button>
	<button id="Rew" class="previous"><name>Rewind</name></button>
	<button id="Fwd" class="next"><name>Forward</name></button>
	
</remote>
