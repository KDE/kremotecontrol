<?xml version="1.0" ?>
<!DOCTYPE profile SYSTEM "profile.dtd">
<profile id="Suspend" servicename="org.kde.klauncher">
	<name>Supend or Hibernate</name>
	<author>Michael Zanetti</author>
	<action objid="KLauncher" prototype="void kdeinit_exec(QString, QStringList, QStringList, QString)" repeat="0" autostart="0">
		<name>To RAM</name>
		<comment>Suspends your computer to RAM</comment>
		<argument type="QString">
			<comment>System command to use for suspend</comment>
			<default>solid-powermanagement</default>
		</argument>
		<argument type="QStringList">
			<comment>Parameters for the suspend commands</comment>
			<default>suspend,to_ram</default>
		</argument>
		<argument type="QStringList"><comment>Environment variables</comment></argument>
		<argument type="QString"><comment>Startup ID</comment></argument>
	</action>
	<action objid="KLauncher" prototype="void kdeinit_exec_wait(QString, QStringList, QStringList, QString)" repeat="0" autostart="0">
		<name>To disk</name>
		<comment>Suspends your computer disk (hibernate)</comment>
		<argument type="QString">
			<comment>System command to use for suspend</comment>
			<default>solid-powermanagement</default>
		</argument>
		<argument type="QStringList">
			<comment>Parameters for the suspend commands</comment>
			<default>suspend,to_disk</default>
		</argument>
		<argument type="QStringList"><comment>Environment variables</comment></argument>
		<argument type="QString"><comment>Startup ID</comment></argument>
	</action>
</profile>
