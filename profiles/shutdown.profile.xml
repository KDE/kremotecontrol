<?xml version="1.0" ?>
<!DOCTYPE profile SYSTEM "profile.dtd">
<profile id="Shutdown" servicename="org.kde.ksmserver">
	<name>Shutdown or reboot</name>
	<author>Michael Zanetti</author>
	<action objid="KSMServer" prototype="void logout(int, int, int)" repeat="0" autostart="0">
		<name>logout</name>
		<comment>Logout and shutdown or reboot your computer</comment>
		<argument type="int">
			<comment>Ask for confirmation? 1 = No, 2 = Yes</comment>
			<default>2</default>
		</argument>
		<argument type="int">
			<comment>Shutdown? 1 = Reboot, 2 = Halt, 3 = Logout</comment>
			<default>2</default>
		</argument>
		<argument type="int">
			<comment>When? 0 = When ready, 1 = Try now, 2 = Force now, 3 = Interactive</comment>
			<default>2</default>
		</argument>
	</action>
</profile>
