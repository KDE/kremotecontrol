<?xml version="1.0" ?>

<profile xmlns="urn:org-kde-kremotecontrol" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="urn:org-kde-kremotecontrol file:profile.xsd">
    
    <name>Okular</name>
    <version>0.1</version>
    <author>Pino Toscano</author>

    <action id="previousPage" button="Rewind"  repeat="true">
        <name>Back</name>
        <description>Goes to the previous page</description>
        <prototype>
            <serviceName>org.kde.okular</serviceName>
            <node>okular</node>
            <function>slotPreviousPage</function>
        </prototype>
        <ifmulti>sendtotop</ifmulti>
    </action>
    
    <action id="nextPage" button="FastForward" repeat="true">
        <name>Forward</name>
        <description>Goes to the next page</description>
        <prototype>
            <serviceName>org.kde.okular</serviceName>
            <node>okular</node>
            <function>slotNextPage</function>
        </prototype>
        <ifmulti>sendtotop</ifmulti>
    </action>
    
    <action id="firstPage" button="SkipBackward">
        <name>First</name>
        <description>Goes to the first page</description>
        <prototype>
            <serviceName>org.kde.okular</serviceName>
            <node>okular</node>
            <function>slotGotoFirst</function>
        </prototype>
        <ifmulti>sendtotop</ifmulti>
    </action>
    
    <action id="lastPage" button="SkipForward">
        <name>Last</name>
        <description>Goes to the last page</description>
        <prototype>
            <serviceName>org.kde.okular</serviceName>
            <node>okular</node>
            <function>slotGotoLast</function>
        </prototype>
        <ifmulti>sendtotop</ifmulti>
    </action>
    
    <action id="pause" button="Pause">
        <name>Presentation</name>
        <description>Starts / stops presentation</description>
        <prototype>
            <serviceName>org.kde.okular</serviceName>
            <node>okular</node>
            <function>slotTogglePresentation</function>
        </prototype>
        <ifmulti>sendtotop</ifmulti>
    </action>
    
    <action id="reload">
        <name>Reload</name>
        <description>Reloads the open document</description>        
            <prototype>
                <serviceName>org.kde.okular</serviceName>
                <node>okular</node>
                <function>reload</function>
            </prototype>
        <ifmulti>sendtotop</ifmulti>
    </action>
    
    <action id="goToPage">
        <name>Go to Page</name>
        <description>Goes to the specified page</description>        
        <prototype>
            <serviceName>org.kde.okular</serviceName>
            <node>okular</node>
            <function>goToPage</function>
            <arguments>
                <argument type="uint">
                    <comment>The page to choose</comment>
                    <default>1</default>
                </argument>  
            </arguments>            
        </prototype>
        <ifmulti>sendtotop</ifmulti>
    </action>
    
    <action id="openFile" start="true">
        <name>Open document</name>
        <description>Opens a specific document</description>        
        <prototype>
            <serviceName>org.kde.okular</serviceName>
            <node>okular</node>
            <function>openDocument</function>
            <arguments>
                <argument type="QString"><comment>The document to be open</comment></argument>
            </arguments>            
        </prototype>
        <ifmulti>sendtotop</ifmulti>
    </action>
   
</profile>
