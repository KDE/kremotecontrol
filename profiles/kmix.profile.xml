<?xml version="1.0" ?>
<!DOCTYPE profile SYSTEM "profile.dtd">
<profile id="kmix" servicename="org.kde.kmix">
    <name>Sound Mixer</name>
    <author>Michael Zanetti</author>
    <instances unique="1"/>
    <action objid="Mixer0" prototype="void increaseVolume(QString)" class="volumeup" repeat="1">
        <name>Increase Volume</name>
        <comment></comment>
        <argument type="QString">
            <comment>The name slider you want to move and its index separated by a colon (eg. Master:0)</comment>
            <default>Master:0</default>
        </argument>
    </action>
    <action objid="Mixer0" prototype="void decreaseVolume(QString)" class="volumedown" repeat="1">
        <name>Decrease Volume</name>
        <comment></comment>
        <argument type="QString">
            <comment>The name slider you want to move and its index separated by a colon (eg. Master:0)</comment>
            <default>Master:0</default>
        </argument>
    </action>
    <action objid="Mixer0" prototype="void toggleMute(QString)" class="mute">
        <name>Toggle Mute</name>
        <comment></comment>
        <argument type="QString">
            <comment>The name slider you want to mute and its index separated by a colon (eg. Master:0)</comment>
            <default>Master:0</default>
        </argument>
    </action>
</profile>
