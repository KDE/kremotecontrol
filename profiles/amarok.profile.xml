<?xml version="1.0" ?>
<!DOCTYPE profile SYSTEM "profile.dtd">
<profile id="amarok" servicename="org.mpris.amarok">
    <name>Amarok</name>
    <author>Dirk Ziegelmeier</author>
    <instances unique="1"/>

    <!-- Playback actions -->
    <action objid="Player" prototype="void Play()" class="play" button="Play">
        <name>Start playing</name>
        <comment></comment>
    </action>
    <action objid="Player" prototype="void Stop()" class="stop" button="Stop">
        <name>Stop playing</name>
        <comment></comment>
    </action>
    <action objid="Player" prototype="void Pause()" class="pause" button="PlayPause">
        <name>Pause playing</name>
        <comment></comment>
    </action>
    <action objid="Player" prototype="void Next()" class="next" button="SkipForward">
        <name>Advance to next track</name>
        <comment></comment>
    </action>
    <action objid="Player" prototype="void Prev()" class="previous" button ="SkipBackward">
        <name>Go to previous track</name>
        <comment></comment>
    </action>
</profile>
