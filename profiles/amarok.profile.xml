<?xml version="1.0" ?>
<!DOCTYPE profile SYSTEM "profile.dtd">
<profile id="amarok" servicename="org.mpris.amarok">
    <name>Amarok</name>
    <author>Dirk Ziegelmeier</author>
    <instances unique="1"/>

    <!-- Playback actions -->
    <action objid="Player" prototype="void Play()" button="Play">
        <name>Start playing</name>
        <comment></comment>
    </action>
    <action objid="Player" prototype="void Stop()" button="Stop">
        <name>Stop playing</name>
        <comment></comment>
    </action>
    <action objid="Player" prototype="void Pause()" button="PlayPause">
        <name>Pause playing</name>
        <comment></comment>
    </action>
    <action objid="Player" prototype="void Next()" button="SkipForward">
        <name>Advance to next track</name>
        <comment></comment>
    </action>
    <action objid="Player" prototype="void Prev()"  button ="SkipBackward">
        <name>Go to previous track</name>
        <comment></comment>
    </action>
    <action objid="Player" prototype="void Forward(int)" button="Forward">
        <name>Fast Forward</name>
        <argument type="int">
            <comment>Amount to fast forward in ms</comment>
            <default>10000</default>
        </argument>
        <comment></comment>
    </action>
    <action objid="Player" prototype="void Backward(int)"  button ="Rewind">
        <name>Rewind</name>
        <argument type="int">
            <comment>Amount to rewind in ms</comment>
            <default>10000</default>
        </argument>
        <comment></comment>
    </action>
</profile>
